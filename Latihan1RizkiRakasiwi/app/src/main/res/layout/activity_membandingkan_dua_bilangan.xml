<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".membandingkanDuaBilangan">


    <LinearLayout
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:layout_gravity="left|center"
            android:onClick="backMembandingkanDuaBilangan"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_arrow_back"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Membandingkan dua bilangan"
            android:layout_gravity="left|center"
            android:layout_marginLeft="8dp"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"

            android:id="@+id/txt_masukanAngka1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <EditText
                android:id="@+id/edt_masukanangka1"
                android:hint="Masukan angka pertama"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"
            android:id="@+id/txt_masukanAngka2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <EditText
                android:id="@+id/edt_masukanangka2"
                android:hint="Masukan angka kedua"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>
                <Button
            android:layout_width="match_parent"
            android:id="@+id/btn_proses_lkl"
            android:text="Proses"
            android:onClick="btnproseslkl"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_outputKLK"
            android:textColor="#000000"
            android:text="Output : -"
            android:layout_gravity="left"
            android:layout_marginLeft="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>